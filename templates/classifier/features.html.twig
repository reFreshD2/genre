{% extends 'base.html.twig' %}

{% block title %}Классификатор{% endblock %}

{% block body %}
    <h1>Выбор признаков для классификации</h1>

    <form action="{{ path('classifier_features') }}" method="post">
        {% for feature in features %}
            <label> {{ feature.name }}
                <input type="checkbox" value="{{ feature.id }}" name="features[]">
            </label> <br>
        {% endfor %}

        <input hidden name="submit">
        <input type="submit" value="Классифицировать">
    </form>

    <a href="{{ path('classifier') }}">Отмена</a>
{% endblock %}
