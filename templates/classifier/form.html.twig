{% extends 'base.html.twig' %}

{% block title %}Классификатор{% endblock %}

{% block body %}
    <h1>Классификая жанра</h1>

    <form action="{{ path('classifier_make') }}" method="post">
        {% for feature in features %}
            {% if feature.type == 0 %}
                <label> {{ feature }}
                    <input type="text" name="{{ feature.alias }}"> <br>
                </label> <br>
            {% else %}
                <label> {{ feature }}
                    <input type="number" name="{{ feature.alias }}">
                </label> <br>
            {% endif %}
        {% endfor %}

        <input hidden name="submit">
        <input type="submit" value="Классифицировать">
    </form>

    <a href="{{ path('classifier') }}">Отмена</a>
{% endblock %}
