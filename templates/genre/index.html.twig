{% extends 'base.html.twig' %}

{% block title %}Редактор жанров{% endblock %}

{% block body %}
    <h1>Редактор жанров</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th scope="col">Название жанра</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.name }}</td>
                <td>
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="white_space">.</div>

    <a href="{{ path('genre_new') }}" class="nav">Добавить запись</a>
    <a href="{{ path('admin') }}" class="nav">Вернуться назад</a>
{% endblock %}
