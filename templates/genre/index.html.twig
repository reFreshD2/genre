{% extends 'base.html.twig' %}

{% block title %}Редактор жанров{% endblock %}

{% block body %}
    <h1>Редактор жанров</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th>Название жанра</th>
                <th>Дата редактирования</th>
                <th>Alias для форм</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.name }}</td>
                <td>{{ genre.changeAt ? genre.changeAt|date('Y-m-d') : '' }}</td>
                <td>{{ genre.alias }}</td>
                <td>
                    <a href="{{ path('genre_edit', {'id': genre.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('genre_new') }}">Добавить запись</a>
    <a href="{{ path('admin') }}">Вернуться назад</a>
{% endblock %}
