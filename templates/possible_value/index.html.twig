{% extends 'base.html.twig' %}

{% block title %}Редактор возможных значений{% endblock %}

{% block body %}
    <h1>Редактор возможных значений</h1>

    <table class="table" border="2">
        <thead>
            <tr>
                <th>Название признака</th>
                <th>Возможное значение</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for possible_value in possible_values %}
            <tr>
                <td>{{ possible_value.feature }}</td>
                <td>{{ possible_value.value }}</td>
                <td>
                    <a href="{{ path('possible_value_edit', {'id': possible_value.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('possible_value_new') }}">Добавить запись</a>
    <a href="{{ path('admin') }}">Вернуться назад</a>
{% endblock %}
