{% extends 'base.html.twig' %}

{% block title %}Редактор признаков{% endblock %}

{% block body %}
    <h1>Редактор признаков</h1>

    <table class="table" border="2">
        <thead>
        <tr>
            <th>Название жанра</th>
            <th>Тип</th>
            <th>Alias для форм</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.name }}</td>
                <td>
                    {% if feature.type == 0 %}
                        Качественный признак
                    {% elseif feature.type == 1 %}
                        Количественный признак
                    {% else %}
                        Тип признака не указан
                    {% endif %}
                </td>
                <td>{{ feature.alias }}</td>
                <td>
                    <a href="{{ path('feature_edit', {'id': feature.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('feature_new') }}">Добавить запись</a>
    <a href="{{ path('admin') }}">Вернуться назад</a>
{% endblock %}
